            "target.macros_add": [
                "BLUENRG_PIN_SPI_MOSI=MOSI_FRONT",
                "BLUENRG_PIN_SPI_MISO=MISO_FRONT",
                "BLUENRG_PIN_SPI_nCS=CS_BLE",
